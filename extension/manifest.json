{
  "manifest_version": 3,
  "name": "Tab Info Display",
  "version": "1.0",
  "description": "Automatically displays the current tab's title, favicon, and og:description",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tab Info Display"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "tab-info-display@example.com",
      "strict_min_version": "109.0"
    }
  }
}